<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/TeamNumText"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="Team Number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TelePointsText"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:text="TeleopPoints"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ClimbText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Climb"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/AutoPointsText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Auto Points"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VaultPointsText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Vault Points"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/AutoRunText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Auto Run"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/MatchesPlayedText"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Matches Played"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>